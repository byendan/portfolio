<div class="project-form">
  <%= form_for(Project.new, remote: true) do |f| %>
    <div class="project-name-field p-form">
      <%= f.text_field :name, placeholder: "Project name", class: "p-field" %>
    </div>
    <div class="project-content-field p-form">
      <%= f.text_area :content, placeholder: "Project Description", rows: 15, class: "p-field" %>
    </div>
    <div class="tags-field p-form">
      <%= f.text_field :all_tags, placeholder: "Tags separated with comma", class: "p-field" %>
    </div>
    <div class="project-button">
      <%= f.submit "Post", class: "btn btn-primary "%>
    </div>
  <% end %>
</div>
